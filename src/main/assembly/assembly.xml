<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">

	<id>RELEASE</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>libs</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<includes>
				<include>*.properties</include>
				<include>*.yml</include>
				<include>i18n/*.properties</include>
			</includes>
			<outputDirectory>config</outputDirectory>
		</fileSet>
		<!--存放db文件-->
		<fileSet>
			<directory>db</directory>
			<includes>
				<include>*.db</include>
			</includes>
			<outputDirectory>db</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/scripts</directory>
			<fileMode>0751</fileMode>
			<includes>
				<include>*.sh</include>
				<include>*.bat</include>
			</includes>
			<outputDirectory>bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>libs</directory>
			<fileMode>0751</fileMode>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>libs</outputDirectory>
		</fileSet>
		<!--存放window注册文件-->
		<fileSet>
			<directory>doc/windows</directory>
			<includes>
				<include>*.bat</include>
			</includes>
			<outputDirectory>./</outputDirectory>
		</fileSet>
		<!--用于version文件的的存放-->
		<fileSet>
			<directory>src/main/resources</directory>
			<includes>
				<include>version.txt</include>
			</includes>
			<outputDirectory>./</outputDirectory>
		</fileSet>
		<!-- 日志工具 -->
		<fileSet>
			<directory>doc/log</directory>
			<includes>
				<include>tail.exe</include>
			</includes>
			<outputDirectory>log</outputDirectory>
		</fileSet>

	</fileSets>
	<files>
		<file>
			<source>target/${artifactId}-${version}.jar</source>
			<fileMode>0751</fileMode>
			<outputDirectory>dist_lib</outputDirectory>
			<!--打包最后tar包里面的名称-->
			<destName>BaseDataServer.jar</destName>
		</file>
	</files>
</assembly>